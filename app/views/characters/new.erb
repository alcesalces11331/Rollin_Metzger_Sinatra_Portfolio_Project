<h1>Create your own Personalized Dungeons and Dragons Character!</h1>
<form action="/characters" method='POST'>
	<label for="name">
		Name: <input type="text" name='character[name]'>
	</label>
	<br>
	<label for="race">
		Race: <br>
		<% @races.each do |race| %>
			<label for="<%= race.name %>">
				<%= race.name %>
				<input type="checkbox" name="character[race][<%= race.name %>]">
			</label>
		<% end %>
	</label>
	<br>
	<label for="class">
		Class: <br>
		<% @klasses.each do |klass| %>
			<label for="<%= klass.name %>">
				<%= klass.name %>
				<input type="checkbox" name="character[klass][<%= klass.name %>]">
			</label>
		<% end %>
	</label>
	<br>
	Ability Scores:
	<br>
	<label for="str">
		Strength: <input type="integer" name='character[str]'>
	</label>
	<br>
	<label for="con">
		Constitution: <input type="integer" name='character[con]'>
	</label>
	<br>
	<label for="dex">
		Dexterity: <input type="integer" name='character[dex]'>
	</label>
	<br>
	<label for="wis">
		Wisdom: <input type="integer" name='character[wis]'>
	</label>
	<br>
	<label for="int">
		Intelligence: <input type="integer" name='character[int]'>
	</label>
	<br>
	<label for="cha">
		Charisma: <input type="integer" name='character[cha]'>
	</label>
	<br>
	<input type="submit" value='Create'>
</form>