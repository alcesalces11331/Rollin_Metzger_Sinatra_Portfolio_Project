<% if logged_in? %>
	Name: <%= @character.name %><br>
	Race: <a href='races/<%= @race.name %>'><%= @race.name %></a><br>
	Class: <a href='klasses/<%= @klass.name %>'><%= @klass.name %></a><br>
	Ability Scores:<br>
	Strength: <%= @character.str %><br>
	Constitution: <%= @character.con %><br>
	Dexterity: <%= @character.dex %><br>
	Wisdom: <%= @character.wis %><br>
	Intelligence: <%= @character.int %><br>
	Charisma: <%= @character.cha %><br>
	<a href="/characters/<%= @character.slug %>/edit">Edit <%= @character.name %></a><br>
	<form action="/logout">
		<input type="submit" value="Log Out">
	</form>
<% else %>
	<a href="/login">Log In to See Your Character</a>
<% end %>