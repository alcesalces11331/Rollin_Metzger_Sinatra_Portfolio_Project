<h1>Sign Up</h1>
<form action="/signup" method="post">
	<label for="username">
		Name:
		<input type="text" name="username">
	</label>
	<br>
	<label for="email">
		Email:
		<input type="text" name="email">
	</label>
	<br>
	<label for="password">
		Password:
		<input type="text" name="password">
	</label>
	<br>
	<input type="submit" value="Create User">
</form>